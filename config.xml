<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.TTRCalculator" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>TTR Calculator</name>
    <description>
        Ticket To Ride Score Calculator and Simulator
    </description>
    <author href="http://phonegap.com">
        Ryan Allison
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
	<preference name="Orientation" value="landscape" />
    <platform name="android">
    </platform>
    <platform name="ios">
    </platform>
    <platform name="wp8">
    </platform>
    <platform name="windows">
    </platform>
	<icon src="icon.png"/>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
